<?xml version="1.0" encoding="UTF-8"?>
<templates>

	<!-- Contents of the configuration dialog ### Is this used?  From the easy view? -->
	<t t-name="WidgetConfigurator">
        <!-- Unfortunately glyphicons do not work since they are not provided by odoo web.
		<button class="btn btn-default oe_opencpq_button">
			<span class="glyphicon glyphicon-resize-full"></span> Switch Fullscreen
		</button>
		-->
        <div class="oe_opencpq_button_rel">
			<button class="fa fa-expand btn btn-default oe_opencpq_button"> fullscreen</button>
		</div>
	    <iframe class="oe_opencpq_iframe" width="100%" height="100%" t-attf-src="{{configurator_url}}" />
	</t>

	<!--
	  Contents of the "Configuration" tab ("notebook page" in odoo terminology)
	  of the product variant (product.product) form
    -->
	<t t-name="opencpq_configure">
        <div class="o_opencpq">
			<button class="opencpq_button_class btn btn-sm btn-default">
				<span class="fa fa-cogs"/>
				Configure
			</button>
        </div>
		<div class="opencpq_html_class">
		</div>
    </t>

	<!-- Contents of the configuration dialog -->
	<t t-name="OpenCPQConfigurator">
	    <iframe class="oe_opencpq_iframe"
			width="100%" height="100%" style="padding: 0px; border-width: 0px;"
			t-attf-src="{{configurator_url}}" />
	</t>

</templates>
