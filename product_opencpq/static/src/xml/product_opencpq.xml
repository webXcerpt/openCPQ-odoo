<?xml version="1.0" encoding="UTF-8"?>
<templates>

	<t t-name="WidgetConfigurator">
        <!-- glyphicons klappen leider nicht, da nicht von odoo web bereitgestellt
		<button class="btn btn-default oe_opencpq_button">
			<span class="glyphicon glyphicon-resize-full"></span> Switch Fullscreen
		</button>
		-->
        <div class="oe_opencpq_button_rel">
			<button class="fa fa-expand btn btn-default oe_opencpq_button"> fullscreen</button>
		</div>
	    <iframe class="oe_opencpq_iframe" width="100%" height="100%"
	        t-attf-src="/product_opencpq/static/{{configurator}}/index.html">
	    </iframe>
	</t>

	<!-- Hier werden die Buttons definiert fuer das dialog-widget-->
	<t t-name="opencpq_button">
        <div class="o_opencpq">
			<div t-attf-class="opencpq_button_class">
                <button t-attf-class="btn btn-sm btn-default">
					<span class="fa fa-cogs"/>
					Configure
                </button>
            </div>
        </div>
    </t>

	<!-- Hier wird der Inhalt des Dialogs definiert-->
	<t t-name="OpencpqConfigurator">
		<div class="form-group">
			<label for='name' class='control-label'>Text-Result</label>
			<input type='text' class="opencpq_input_text" value="Test-Text-input"/>
		</div>
		<div class="form-group">
			<label for='name' class='control-label'>HTML-Result</label>
			<input type='text' class="opencpq_input_html" value="Test-HTML-input"/>
		</div>
	    <iframe class="oe_opencpq_iframe" width="100%" height="100%"
	        t-attf-src="/product_opencpq/static/{{configurator}}/index.html">
	    </iframe>
	</t>

</templates>
