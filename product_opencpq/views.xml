<?xml version="1.0" encoding="utf-8"?>
<openerp>
  	<data>
    
	    <!-- 
	    Be Carefull with attribute="replace" in x-path expressions, as there are more views which 
	    inherit from "product.product_template_form_view". If necessary it can be handled with 
	    setting the right priority
	     -->
	     
	    <!-- Changes which should be shown ONLY on the template view -->
        <record id="product_template_only_form_view2" model="ir.ui.view">
            <field name="name">product.template.product.form2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
		        <div name="options" position="inside">
		            <div>
		                <field name="configurator_ok"/>
		                <label for="configurator_ok"/>
		            </div>
		        </div>
		        <field name='currency_id' position="after">
		            <field name="configurator_type" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
		        </field>
            </field>
        </record>
    
    	<!-- Changes which should be shown ONLY on the variant view --> 
        <record id="product_normal_form_view3" model="ir.ui.view">
            <field name="name">product.product.form3</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
		        <div name="options" position="inside">
		            <div>
		                <field name="configurator_ok" readonly="False"/>
		                <label for="configurator_ok"/>
		            </div>
		        </div>
		        <!--  Show openCPQ variables in General Information Tab 
                <field name="currency_id" position="after">
                    <field name="configuration_result" readonly="True" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
                </field>
		        <field name="currency_id" position="after">
		            <field name="configurator_type" readonly="True" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
		        </field>
		         -->
		         <!-- Show opencpq-variables and widget in extra-Tab: "Configuration"  -->
	            <xpath expr="//page[@name='sales']" position="after">
                    <page name="configuration" string="Configuration" attrs="{'invisible': [('configurator_ok', '=', False)]}">
                    	<group>
		            		<field name="configurator_type" readonly="0" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
                    		<field name="configuration_result" readonly="1" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
	                	</group>
	                	<group>
		                	<widget type="product_configurator" attrs="{'invisible': [('configurator_ok', '=', False)]}">
		                    </widget>
	                    </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- 
		Change the variant_easy_view as well
		 -->
        <record id="product_variant_easy_edit_view5" model="ir.ui.view">
            <field name="name">product.product.view.form.easy</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <sheet position="inside">
                    <group string="Configuration">
	                    <field name="configuration_result" readonly="True" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
	                    <field name="product_tmpl_id"/> 
	                    <field name="configurator_ok" readonly="True"/>
			            <field name="configurator_type" readonly="True" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
                	</group>
                	<widget type="product_configurator" attrs="{'invisible': [('configurator_ok', '=', False)]}">
                    </widget>
                </sheet>
            </field>
        </record>
    
	    <!-- Changes which should be shown on template AND variant views 
	    <record id="opencpq_product_product_template_form" model="ir.ui.view">
		    <field name="model">product.template</field>
		    <field name="inherit_id" ref="product.product_template_form_view" />
		    <field name="arch" type="xml">
		       <div name="options" position="inside">
	
		       </div>
		    </field>
	    </record>
	    -->
       
  	</data>
</openerp>