<?xml version="1.0" encoding="utf-8"?>
<openerp>
  	<data>

      <!--
        Problem:
        Create product.product wie bisher ist nicht möglich, da product_tmpl_id
        field required ist..
            -> Erzeugt warnung beim "create"
            -> wenn man product_tmpl_id aus view löscht, funktioniert alles wie bisher
        Loesung (ToDo):
        Add 2 Buttons:
          - in variant view:      second create button:    "create openCPQ product"
          - in sales.order.line:  second "create and edit: "create and edit openCPQ product"

        -> vereinfacht untenstehende Domains enorm, da bestehende Formviews identisch zum bestehendem odoo bleiben
      -->

	    <!-- Changes which should be shown ONLY on the template view -->
        <record id="product_template_only_form_view2" model="ir.ui.view">
            <field name="name">product.template.product.form2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
    		        <div name="options" position="inside">
    		            <div>
    		                <field name="configurator_ok" attrs="{'readonly': [('id', '!=', False)]}"/>
    		                <label for="configurator_ok"/>
    		            </div>
    		        </div>
    		        <field name='currency_id' position="after">
    		            <field name="configurator_type" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
    		        </field>
            </field>
        </record>

    	<!-- Changes which should be shown ONLY on the variant view -->
        <record id="product_normal_form_view3" model="ir.ui.view">
            <field name="name">product.product.form3</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
		        <div name="options" position="inside">
		            <div attrs="{'readonly': [('configurator_ok', '=', True)], 'invisible': [('id', '!=', False), ('configurator_ok', '=', False)]}">
                    <!--  -->
                    <field name="template_ok"/>
		                <label for="template_ok"/>
                </div>
                <!-- -->
                <div attrs="{'readonly': [('configurator_ok', '=', True)], 'invisible': ['|',('template_ok', '=', False),'&amp;',('id', '!=', False), ('configurator_ok', '=', False)]}">
                <!-- <div attrs="{'invisible': [('template_ok', '=', False)]}"> -->
                    <label for="product_tmpl_id"/>
                    <field name="product_tmpl_id" domain="[('configurator_ok','=',True)]" options="{'no_create': True}" attrs="{'required': [('id', '!=', False)]}"/>
                </div>
                <!--
                Unnoetig und verwirrend: div attrs="{'invisible': [('template_ok', '=', False)]}"
                Wir brauchen das Feld configurator_ok trotzdem. Fuer Domains weiter unten!
                -->
                <div invisible='True'>
                    <field name="configurator_ok" readonly="True"/>
		                <label for="configurator_ok" />
		            </div>
		        </div>

		         <!-- Show opencpq-variables and widget in extra-Tab: "Configuration"  -->
	            <xpath expr="//page[@name='sales']" position="after">
                    <page name="configuration" string="Configuration" attrs="{'invisible': [('configurator_ok', '=', False)]}">
                    	  <group>
		            		        <field name="configurator_type" readonly="1"/>
                    		    <field name="configuration_result" readonly="1"/>
	                	    </group>
	                	    <group>
		                	      <widget type="product_configurator"/>
	                      </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!--
		Change the variant_easy_view as well
		 -->
        <record id="product_variant_easy_edit_view5" model="ir.ui.view">
            <field name="name">product.product.view.form.easy</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <sheet position="inside">
                    <group string="Configuration">
  	                    <field name="configuration_result" readonly="True" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
  	                    <field name="product_tmpl_id" readonly="True"/>
  	                    <field name="configurator_ok" readonly="True"/>
  			                <field name="configurator_type" readonly="True" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
                	  </group>
                	  <widget type="product_configurator" attrs="{'invisible': [('configurator_ok', '=', False)]}"/>
                </sheet>
            </field>
        </record>

	    <!-- Changes which should be shown on template AND variant views
	    <record id="opencpq_product_product_template_form" model="ir.ui.view">
		    <field name="model">product.template</field>
		    <field name="inherit_id" ref="product.product_template_form_view" />
		    <field name="arch" type="xml">
		       <div name="options" position="inside">

		       </div>
		    </field>
	    </record>
	    -->


  	</data>
</openerp>
